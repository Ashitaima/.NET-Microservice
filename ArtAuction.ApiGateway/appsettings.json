{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "aggregator-route": {
        "ClusterId": "aggregator-cluster",
        "Match": {
          "Path": "/aggregator/{**catch-all}"
        },
        "Transforms": [
          {
            "PathPattern": "/api/{**catch-all}"
          }
        ]
      },
      "auction-route": {
        "ClusterId": "artauction-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      },
      "health-route": {
        "ClusterId": "artauction-cluster",
        "Match": {
          "Path": "/health"
        }
      }
    },
    "Clusters": {
      "artauction-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://artauction-webapi"
          }
        }
      },
      "aggregator-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://aggregator"
          }
        }
      }
    }
  }
}
